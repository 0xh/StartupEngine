{
    "name": "SitePress",
    "description": "A beautiful & open-source content platform. Powered by Webslides, Laravel, and Contentful.",
    "keywords": [
        "Productivity",
        "Publishing",
        "CMS",
        "HTML5",
        "Blog",
        "Laravel",
        "Contentful"
    ],
    "website": "https://sitepress.herokuapp.com",
    "repository": "https://github.com/luckyrabbitllc/SitePress",
    "logo": "http://www.luckyrabbit.info/images/lr-logo.png",
    "success_url": "/",
    "scripts": {
        "postdeploy": "php artisan command:ImportDefaultSpace"
    },
    "env": {
        "SECRET_TOKEN": {
            "description": "A secret key for verifying the integrity of signed cookies.",
            "generator": "secret"
        },
        "APP_DEBUG": {
            "description": "Set to TRUE to enable debugging messages.",
            "value": "FALSE"
        },
        "APP_KEY": {
            "description": "Encryption key.",
            "value": "base64:ICO5NZdtA3yqmcwrwz3/NUuqrZz0VwvdgocA1HWYckw="
        },
        "APP_URL": {
            "description": "URL for this app.",
            "value": "https://xxxxx.herokuapp.com/"
        },
        "CONTENTFUL_API_KEY": {
            "description": "Contentful API Key.",
            "value": "XXXXX"
        },
        "CONTENTFUL_SPACE_ID": {
            "description": "Contentful Space ID.",
            "value": "XXXXX"
        },
        "CONTENTFUL_MANAGEMENT_TOKEN": {
            "description": "Contentful Management Token.",
            "value": "XXXXX"
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "Free"
        }
    },
    "image": "heroku/php",
    "addons": [
        {
            "plan": "heroku-postgresql",
            "options": {
                "version": "9.5"
            }
        }
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-php"
        }
    ],
    "environments": {
        "test": {
            "scripts": {
                "test": "bundle exec rake test",
                "postdeploy": "php artisan command:ImportDefaultSpace"
            }
        }
    }
}